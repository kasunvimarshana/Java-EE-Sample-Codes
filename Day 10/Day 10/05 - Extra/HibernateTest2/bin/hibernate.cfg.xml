<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
        
<hibernate-configuration>
     <session-factory>
     	<property name="connection.driver_class">org.postgresql.Driver</property>
     	<property name="connection.url">jdbc:postgresql://localhost:5432/dbex1</property>
     	<property name="coonection.username" >postgres</property>
     	<property name="connection.password">0147</property>
     	
     	<property name="connection.pool_size">1</property>
     	
     	<property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>
     	
     	<property name="hbm2ddl">auto</property>
     	
     	<mapping class="org.idex.entity.Category"></mapping>
     </session-factory>
</hibernate-configuration>